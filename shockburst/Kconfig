menuconfig SHOCKBURST
	bool "ShockBurst (not Enhanced)"
	default n
	help
	  Enable Shockburst functionality.

if SHOCKBURST

config SHOCKBURST_MAX_PAYLOAD_LENGTH
	int "Maximum payload size"
	default 32
	range 1 252
	help
	  The maximum size of the payload.

config SHOCKBURST_TX_FIFO_SIZE
	int "TX buffer length"
	default 8
	help
	  The length of the TX FIFO buffer, in number of elements.

config SHOCKBURST_RX_FIFO_SIZE
	int "RX buffer length"
	default 8
	help
	  The length of the RX FIFO buffer, in number of elements.

config SHOCKBURST_RADIO_IRQ_PRIORITY
	int "Radio interrupt priority"
	range 0 5 if ZERO_LATENCY_IRQS
	range 0 6
	default 1

endif # NRF_SHOCKBURST
